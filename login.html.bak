      <form name='loginForm'>      
          <table width='20%' bgcolor='00aaff' align='center'>      
              <tr>      
                  <td colspan=2>      
                      <center><font size=4><b>欢迎使用DaColock</b></font></center>      
                      <br>      
                  </td>      
                  <br>      
                  <br>      
              </tr>      
              <td>用户名:</td>      
              <td><input type='text' size=25 name='userid'><br></td>      
              </tr>      
              <br>      
              <br>      
              <tr>      
                  <td>密码:</td>      
                  <td><input type='Password' size=25 name='pwd'><br></td>      
                  <br>      
                  <br>      
              </tr>      
              <tr>      
                  <td><input type='submit' onclick='check(this.form)' value='登录'></td>      
              </tr>      
          </table>      
      </form>      
      <script>      
          function check(form)      
          {      
          if(form.userid.value!='' && form.pwd.value!='')      
          {      
          window.open('/serverIndex')      
          }      
          else      
          {      
           alert('用户名和密码不能为空！')/*displays error message*/      
          }      
          }      
      </script>      